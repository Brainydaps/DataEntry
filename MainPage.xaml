<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataEntry.MainPage">
    <StackLayout Padding="20" Spacing="10">
        <Label Text="Data Entry Application" FontSize="24" HorizontalOptions="Center"/>

        <!-- Buttons -->
        <Button Text="Enter Data" Clicked="OnStartDataEntryClicked"/>
        <Button Text="Save Data to CSV" Clicked="OnSaveDataClicked"/>
    </StackLayout>
</ContentPage>
